<%- include ('./partials/header.ejs'); %> 
<body>
    <%- include ('./partials/navbar.ejs'); %>
    <div class="container">
        <h1><%= pergunta.titulo %> </h1>
        <p><%= pergunta.descricao %>  </p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Resposnda</h3>
            <textarea placeholder="Digite a resposta" class="form-control" name="corpo"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %> ">
            <button type="submit" class="btn btn-primary mt-3">Responder</button>
        </form>
        <h3>Respostas</h3>
        <% respostas.forEach(resposta => { %>
            <div class="card mt-3">
                <div class="card-body">
                    <%= resposta.corpo %> 
                </div>
            </div>
        <% }) %>
    </div>

</body>
<%- include ('./partials/footer.ejs'); %> 
